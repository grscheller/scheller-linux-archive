#!/bin/bash
#
# Install a home environment onto a computer.
#
# File: ~/bin/installHome
# Usage:   installHome
#
# Written by Geoffrey Scheller
#

# If on rygar, just install it.
comp=$(hostname)
if [[ ${comp%%.*} == "drxrytl410kzv" ]] 
then
    cd ~/devel/linuxHome
    ./install_linuxHome 
    exit 0
fi

# Check if a new package is ready, if so, install into ~/devel
# and then inatall that into ~.
cd ~/catch
if (( $? == 0 )) && [[ -d linuxHome ]]
then
    [[ -d ~/devel ]] || mkdir ~/devel
    [[ -d ~/devel/linuxHome ]] && rm -rf ~/devel/linuxHome
    mv linuxHome ~/devel
    cd ~/devel/linuxHome
    ./install_linuxHome
else
    cd
    [[ -d catch ]] || echo "Error: ~/catch not there!"
    [[ -d catch/linuxHome ]]  || echo "Error: linuxHome not in ~/catch!"
fi

